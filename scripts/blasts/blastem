exports.handler = async function(context, event, callback) {
  const client = context.getTwilioClient();

  const recipients = [
    '+12523393423',
    // Add more numbers here
  ];

  let roster = new Array();
  roster = event.alert_list.split(",");

  const messageBody = 'ðŸš¨ This is Marina Bot function. A Critical Incident has been reported at the marina.' + roster[1]; 

  let hotline = "+1";
  
  try {
    await Promise.all(
      recipients.map(number =>
        client.messages.create({
          body: messageBody,
          from: hotline.concat(context.TWILIO_PHONE_NUMBER.split('+')[1]),
          to: number
        })
      )
    );
    return callback(null, 'Messages sent successfully');
  } catch (error) {
    console.error(error);
    return callback(error);
  }
};